<NavigationButton@Button>:
    bold: True
    font_size: sp(15)
    color: '#748b75'
    background_normal: ''
    background_color: 0.83, 0.83, 0.83, 1
    canvas.before:
        Color:
            rgba: 0.4549, 0.5450, 0.4588, 1
        Line:
            width: dp(3)
            rectangle: self.x, self.y, self.width, self.height

<Interface>:
    orientation: 'vertical'
    BoxLayout:
        id: header_base
        orientation: 'vertical'
        size_hint_y: None
        height: dp(152)
        canvas:
            Color:
                rgba: 0.83, 0.83, 0.83, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            id: net_worth_container
            orientation: 'vertical'
            padding: [0, -3]

            Widget:
                canvas:
                    Color:
                        rgba: 0.83, 0.83, 0.83, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: "Net Worth:"
                bold: True
                font_size: sp(30)
                color: '#748b75'

            Label:
                id: Net_worth_label
                bold: True
                text: "$1,000,000.00"
                font_size: sp(30)
                color: '#9acd32'

        BoxLayout:
            id: Gross_Liab_container
            orientation: 'horizontal'

            BoxLayout:
                id: Gross_container
                orientation: 'vertical'
                padding: [0, 15]
                Label:
                    text: "Gross Worth:"
                    color: '#748b75'
                    bold: True
                    font_size: sp(20)
                    width: dp(187)
                Label:
                    id: Gross_worth_label
                    color: '#9acd32'
                    bold: True
                    font_size: sp(20)
                    text: "$1,500,000.00"

            BoxLayout:
                id: Liab_contianer
                orientation: 'vertical'
                padding: [0, 15]
                Label:
                    text: "Liabilities:"
                    color: '#748b75'
                    bold: True
                    font_size: sp(20)
                    width: 187
                Label:
                    id: Liabilities_label
                    color: '#9acd32'
                    bold: True
                    font_size: sp(20)
                    text: "$500,000.00"

    BoxLayout:
        id: border
        size_hint_y: None
        height: dp(3)
        canvas:
            Color:
                rgba: 0.4549, 0.5450, 0.4588, 1
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: dp(570)
        ScrollView:
            canvas.before:
                Color:
                    rgba: 0.9607, 0.9843, 0.9372, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            SummaryGrid:
                size_hint_y: None
                height: self.minimum_height
                canvas.before:
                    Color:
                        rgba: 0.5725, 0.6784, 0.5804, 1
                    Rectangle:
                        pos: dp(225), dp(0)
                        size: self.size



    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(50)
        canvas:
            Color:
                rgba: 0.83, 0.83, 0.83, 1
            Rectangle:
                pos: self.pos
                size: self.size
        NavigationButton:
            text: "Profile"
        NavigationButton:
            text: "Home"
        NavigationButton:
            text: "Graphs"

